* * * * * /usr/bin/find /var/www/html/cache/ -name "*.json" -type f -mmin +1 -exec rm -fv {} \; >> /var/www/html/temp/cron.log 2>&1
*/10 * * * * /usr/bin/find /var/www/html/temp/ -name "*.mp3" -type f -mmin +10 -exec rm -fv {} \; >> /var/www/html/temp/cron.log 2>&1
0 * * * * /usr/bin/find /var/www/html/temp/ -name "*.log" -type f -exec stat -c %s {} \; | while read size; do if [ "$size" -gt 2097152 ]; then truncate -s 0 {} >> /var/www/html/temp/cron.log 2>&1; fi; done